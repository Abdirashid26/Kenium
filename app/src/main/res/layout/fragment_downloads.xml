<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DownloadsFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Buy from Your Colleagues"
        android:fontFamily="@font/m_bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/Downloads"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:text="Laptops"
        android:fontFamily="@font/m_bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@id/Downloads"
        android:id="@+id/Laptops"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sellitems"
        tools:listitem="@layout/sell_item"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/Laptops"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:text="Phones"
        android:fontFamily="@font/m_bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@id/sellitems"
        android:id="@+id/phones"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sellitems2"
        tools:listitem="@layout/sell_item"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/phones"
        />








</LinearLayout>