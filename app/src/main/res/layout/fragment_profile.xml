<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textSize="25dp"
        android:textAlignment="center"
        android:id="@+id/myPrfoile"
        android:layout_marginVertical="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/m_bold"
        android:text="My Profile" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/myPrfoile"
        android:src="@drawable/profilefile"
        android:id="@+id/profileFile"
        android:layout_marginTop="10dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="50dp"
        android:layout_below="@id/profileFile"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->




        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/userImage"
            android:layout_width="100dp"
            android:scaleType="centerCrop"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/faisal"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faisal Abdirashid"
            android:id="@+id/userName"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center"
            android:fontFamily="@font/m_bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Umma University"
            android:textColor="@color/black"
            android:id="@+id/userUniversity"
            android:textAlignment="center"
            android:textSize="15dp"
            android:fontFamily="@font/m_regular"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="faisaldev26@gmail.com"
            android:textColor="@color/black"
            android:id="@+id/userEmail"
            android:textAlignment="center"
            android:textSize="15dp"
            android:fontFamily="@font/m_regular"
            />


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            app:cornerRadius="50dp"
            android:text="Edit Profile"
            android:fontFamily="@font/m_bold"
            android:layout_marginVertical="10dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fa-Apps"
        android:fontFamily="@font/m_bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>